{
  "name": "nodejs-backend-starter-kit",
  "version": "2.0.0",
  "description": "Modern Node.js backend starter kit with authentication, real-time features, and service integrations",
  "main": "src/index.js",
  "type": "module",
  "repository": "https://github.com/ahmadalsharef994/nodejs-backend-starter-kit.git",
  "author": "Ahmad Alsharef <ahmadalsharef@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "build": "echo 'No build step required'",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint ./",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "docker:dev": "docker-compose up nodejs-backend-dev",
    "docker:prod": "docker-compose up nodejs-backend-prod",
    "prepare": "husky install"
  },
  "keywords": [
    "node",
    "nodejs",
    "backend",
    "starter-kit",
    "express",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "jwt",
    "authentication",
    "authorization",
    "socket.io",
    "real-time",
    "elasticsearch",
    "payment",
    "email",
    "sms",
    "docker",
    "kubernetes",
    "eslint",
    "prettier",
    "jest",
    "husky",
    "security",
    "boilerplate"
  ],
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.1",
    "@sendgrid/mail": "^8.1.4",
    "@supercharge/request-ip": "^1.2.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.7.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prom-client": "^15.1.3",
    "razorpay": "^2.9.4",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.3.4",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "winston": "^3.15.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@faker-js/faker": "^9.1.0",
    "eslint": "^9.13.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
